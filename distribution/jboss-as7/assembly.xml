<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.0"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.0 http://maven.apache.org/xsd/assembly-1.1.0.xsd">
    <id></id>
    <includeBaseDirectory>false</includeBaseDirectory>
    <formats>
        <format>zip</format>
    </formats>

    <files>
        <file>
            <source>src/main/resources/modules/savara/sam/module.xml</source>
            <outputDirectory>/modules/org/savara/sam/main</outputDirectory>
            <filtered>true</filtered>
        </file>
        <file>
            <source>src/main/resources/modules/savara/core/module.xml</source>
            <outputDirectory>/modules/org/savara/main</outputDirectory>
            <filtered>true</filtered>
        </file>
        <file>
            <source>src/main/resources/modules/google/protobuf/module.xml</source>
            <outputDirectory>/modules/com/google/protobuf/main</outputDirectory>
            <filtered>true</filtered>
        </file>
        <file>
            <source>src/main/resources/standalone/standalone.xml</source>
            <outputDirectory>/standalone/configuration</outputDirectory>
            <filtered>true</filtered>
        </file>
        <file>
            <source>src/main/resources/standalone/standalone-preview.xml</source>
            <outputDirectory>/standalone/configuration</outputDirectory>
            <filtered>true</filtered>
        </file>
    </files>

    <fileSets>
	<fileSet>
            <directory>../../demo</directory>
            <outputDirectory>/demo</outputDirectory>
	    <excludes>
		<exclude>**/target/**</exclude>
		<exclude>**/.project</exclude>
		<exclude>**/.classpath</exclude>
	    </excludes>
	</fileSet>
    </fileSets>

    <dependencySets>
	<!-- Modules -->
        <dependencySet>
            <useTransitiveDependencies>false</useTransitiveDependencies>
            <includes>
                <include>org.savara.sam.modules:org.savara.sam.activity</include>
            </includes>
            <outputDirectory>/modules/org/savara/sam/main</outputDirectory>
            <outputFileNameMapping>${artifact.artifactId}-${sam.version}.${artifact.extension}</outputFileNameMapping>
        </dependencySet>
        <dependencySet>
            <useTransitiveDependencies>false</useTransitiveDependencies>
            <includes>
                <include>org.savara.sam.modules:org.savara.sam.aq</include>
            </includes>
            <outputDirectory>/modules/org/savara/sam/main</outputDirectory>
            <outputFileNameMapping>${artifact.artifactId}-${sam.version}.${artifact.extension}</outputFileNameMapping>
        </dependencySet>

	<!-- Savara core -->
        <dependencySet>
            <useTransitiveDependencies>false</useTransitiveDependencies>
            <includes>
                <include>org.savara.bundles:*</include>
            </includes>
            <outputDirectory>/modules/org/savara/main</outputDirectory>
            <outputFileNameMapping>${artifact.artifactId}-${savara.version}.${artifact.extension}</outputFileNameMapping>
        </dependencySet>
        <dependencySet>
            <useTransitiveDependencies>false</useTransitiveDependencies>
            <includes>
                <include>org.scribble.bundles:*</include>
            </includes>
            <outputDirectory>/modules/org/savara/main</outputDirectory>
            <outputFileNameMapping>${artifact.artifactId}-${scribble.version}.${artifact.extension}</outputFileNameMapping>
        </dependencySet>
        <dependencySet>
            <useTransitiveDependencies>false</useTransitiveDependencies>
            <includes>
                <include>org.pi4soa:*</include>
            </includes>
            <outputDirectory>/modules/org/savara/main</outputDirectory>
            <outputFileNameMapping>${artifact.artifactId}-${pi4soa.version}.${artifact.extension}</outputFileNameMapping>
        </dependencySet>
        <dependencySet>
            <useTransitiveDependencies>false</useTransitiveDependencies>
            <includes>
		<include>org.jboss.savara.dependencies.eclipse:emf-ecore</include>
		<include>org.jboss.savara.dependencies.eclipse:emf-ecore-xmi</include>
            </includes>
            <outputDirectory>/modules/org/savara/main</outputDirectory>
            <outputFileNameMapping>${artifact.artifactId}-${emfecore.version}.${artifact.extension}</outputFileNameMapping>
        </dependencySet>
        <dependencySet>
            <useTransitiveDependencies>false</useTransitiveDependencies>
            <includes>
		<include>org.jboss.savara.dependencies.eclipse:emf-common</include>
            </includes>
            <outputDirectory>/modules/org/savara/main</outputDirectory>
            <outputFileNameMapping>${artifact.artifactId}-${emfcommon.version}.${artifact.extension}</outputFileNameMapping>
        </dependencySet>

	<!-- Google protobuf -->
        <dependencySet>
            <useTransitiveDependencies>false</useTransitiveDependencies>
            <includes>
                <include>com.google.protobuf:protobuf-java</include>
            </includes>
            <outputDirectory>/modules/com/google/protobuf/main</outputDirectory>
            <outputFileNameMapping>${artifact.artifactId}-${protobuf.version}.${artifact.extension}</outputFileNameMapping>
        </dependencySet>

	<!-- Integration modules -->
        <dependencySet>
            <useTransitiveDependencies>false</useTransitiveDependencies>
            <includes>
                <include>org.savara.sam.integration:*</include>
            </includes>
            <outputDirectory>/standalone/deployments</outputDirectory>
            <outputFileNameMapping>${artifact.artifactId}.${artifact.extension}</outputFileNameMapping>
        </dependencySet>

	<!-- Test Active Queries and Analysers -->
        <dependencySet>
            <useTransitiveDependencies>false</useTransitiveDependencies>
            <includes>
                <include>org.savara.sam.tests:*</include>
            </includes>
            <outputDirectory>/standalone/deployments</outputDirectory>
            <outputFileNameMapping>${artifact.artifactId}.${artifact.extension}</outputFileNameMapping>
        </dependencySet>

	<!-- Test Web App -->
        <dependencySet>
            <useTransitiveDependencies>false</useTransitiveDependencies>
            <includes>
                <include>org.savara.sam.tests:AQ_Monitor:war</include>
            </includes>
            <outputDirectory>/standalone/deployments</outputDirectory>
            <outputFileNameMapping>${artifact.artifactId}.${artifact.extension}</outputFileNameMapping>
        </dependencySet>

        <dependencySet>
            <useTransitiveDependencies>false</useTransitiveDependencies>
            <includes>
                <include>org.savara.sam:sam-web:war</include>
            </includes>
            <outputDirectory>/standalone/deployments</outputDirectory>
            <outputFileNameMapping>${artifact.artifactId}.${artifact.extension}</outputFileNameMapping>
        </dependencySet>

    </dependencySets>

</assembly>
